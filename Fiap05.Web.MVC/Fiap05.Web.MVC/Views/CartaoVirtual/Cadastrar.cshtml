@model Fiap05.Web.MVC.Models.CartaoVirtual
@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastro de Cartão Virtual</h2>

@Ajudante.Mensagem(TempData["msg"])

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(c => c.Numero)
        @Html.TextBoxFor(c => c.Numero, new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(c => c.Utilizado)
        @Html.LabelFor(c => c.Utilizado)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.CartaoReal)
        @Html.DropDownListFor(c => c.CartaoRealId,
           ViewBag.listaCartao as SelectList,
           new { @class = "form-control" })
    </div>
    @Ajudante.Botao("Cadastrar")
}

